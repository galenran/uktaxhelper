---
import BaseLayout from '../layouts/Base.astro';
import SalaryCalculator from '../components/SalaryCalculator.astro';
import SeoContent from '../components/SeoContent.astro';
import SalaryLinkGrid from '../components/SalaryLinkGrid.astro';
import FaqSection from '../components/FaqSection.astro';

const pageTitle = 'UK Salary Tax Calculator | 2025/26 Take-Home Pay Estimator';
const pageDescription = 'Calculate annual, monthly, and weekly UK take-home pay for 2025/26 with pension contributions, income tax bands, and National Insurance insights.';
---
<BaseLayout title={pageTitle} description={pageDescription} canonical="https://galenran.qzz.io/">
  <SalaryCalculator initialSalary={50_000} initialPensionRate={5} headingLevel="h1" />
  <SalaryLinkGrid />
  <SeoContent />
  <FaqSection />
</BaseLayout>
