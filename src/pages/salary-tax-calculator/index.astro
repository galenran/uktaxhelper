---
import BaseLayout from '../../layouts/Base.astro';
import SalaryCalculator from '../../components/SalaryCalculator.astro';
import SeoContent from '../../components/SeoContent.astro';
import SalaryLinkGrid from '../../components/SalaryLinkGrid.astro';

const pageTitle = 'Salary Tax Calculator UK | Compare 2025/26 Take-Home Pay';
const pageDescription = 'Model UK salary after tax with annual, monthly, and weekly outputs, plus pension contribution support for the 2025/26 tax year.';
const canonicalUrl = 'https://galenran.qzz.io/salary-tax-calculator/';
---
<BaseLayout title={pageTitle} description={pageDescription} canonical={canonicalUrl}>
  <SalaryCalculator initialSalary={45_000} initialPensionRate={5} headingLevel="h1" />
  <SalaryLinkGrid />
  <SeoContent />
</BaseLayout>
