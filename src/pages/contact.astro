---
import BaseLayout from '../layouts/Base.astro';

const title = 'Contact Us | UK Tax Helper';
const description = 'Contact the UK Tax Helper team with questions about the 2025/26 salary tax calculator.';
---
<BaseLayout title={title} description={description} canonical="https://galenran.qzz.io/contact/">
  <section class="card">
    <h1>Contact Us</h1>
    <p>
      Questions about the salary tax calculator or spotted something that needs updating? Send us a message and we will
      respond within two working days.
    </p>
    <p>
      <strong>Email:</strong> <a href="mailto:galenadfuture@gmail.com">galenadfuture@gmail.com</a>
    </p>
    <p>
      For press or partnership enquiries, please include your organisation name and the nature of the request. We review all
      submissions but cannot guarantee a response to unsolicited sales pitches.
    </p>
  </section>
</BaseLayout>
